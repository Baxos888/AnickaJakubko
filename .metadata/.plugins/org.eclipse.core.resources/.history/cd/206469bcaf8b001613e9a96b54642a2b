/* Includes */
#include <stddef.h>
#include "stm32l1xx.h"
#include <stdbool.h>

int main(void) {
	GPIO_InitTypeDef gpioAInitStructure;

	RCC_AHBPeriphClockCmd(RCC_AHBPeriph_GPIOA, ENABLE);
	gpioAInitStructure.GPIO_Mode = GPIO_Mode_OUT;
	gpioAInitStructure.GPIO_OType = GPIO_OType_PP;
	gpioAInitStructure.GPIO_PuPd = GPIO_PuPd_UP;
	gpioAInitStructure.GPIO_Speed = GPIO_Speed_40MHz;
	gpioAInitStructure.GPIO_Pin = GPIO_Pin_5;

	GPIO_Init(GPIOA, &gpioAInitStructure);

	GPIO_InitTypeDef gpioCInitStructure;

	RCC_AHBPeriphClockCmd(RCC_AHBPeriph_GPIOC, ENABLE);
	gpioCInitStructure.GPIO_Mode = GPIO_Mode_IN;
	gpioCInitStructure.GPIO_OType = GPIO_OType_PP;
	gpioCInitStructure.GPIO_PuPd = GPIO_PuPd_NOPULL;
	gpioCInitStructure.GPIO_Pin = GPIO_Pin_13;

	GPIO_Init(GPIOC, &gpioCInitStructure);

	bool BUTTON;
	int counter = 0;
	int counter2 = 0;
	while (1) {
//	uloha1
//GPIO_SetBits(GPIOA, GPIO_Pin_5);
//GPIO_ResetBits(GPIOA, GPIO_Pin_5);
//GPIO_ToggleBits(GPIOA, GPIO_Pin_5);
//GPIO_ToggleBits(GPIOA, GPIO_Pin_5);
//	  Uloha 2
//	GPIO_ReadOutputDataBit(GPIOC, GPIO_Pin_13);
//	GPIO_ReadOutputDataBit(GPIOC, GPIO_Pin_13);
//		Uloha 3a
//		int i = 0;
//		int j = 0;
//		for (i = 0; i < 100000; i++) {
//			if (i == 99999)
//				GPIO_ResetBits(GPIOA, GPIO_Pin_5); //vypni LED
//		}
//		for (j = 0; j < 100000; j++) {
//			if (j == 99999)
//				GPIO_SetBits(GPIOA, GPIO_Pin_5); // zapni LED
//		}
//	Uloha 3b
//		if ((GPIO_ReadInputDataBit(GPIOC, GPIO_Pin_13)) == 0) {
//			BUTTON = true;
//			GPIO_SetBits(GPIOA, GPIO_Pin_5); // zapni LED
//		} else {
//			BUTTON = false;
//			GPIO_ResetBits(GPIOA, GPIO_Pin_5); //vypni LED
//		}
//		Uloha 3c
		if ((GPIO_ReadInputDataBit(GPIOC, GPIO_Pin_13)) == 0) {
			counter++;
			if (counter >= 5) {
				GPIO_SetBits(GPIOA, GPIO_Pin_5); // zapni LED
				BUTTON = true;
				counter = 0;
			}
			if (BUTTON == true){
				if ((GPIO_ReadInputDataBit(GPIOC, GPIO_Pin_13)) == 1){
					counter2++;
					if(counter2 >= 5){
						GPIO_ResetBits(GPIOA, GPIO_Pin_5); //vypni LED
						BUTTON = false;
						counter2 = 0;
					}
				}
			}
		}

		return 0;
	}

#ifdef  USE_FULL_ASSERT

